{
  "name": "@hacienda-cr/sdk",
  "version": "0.0.1",
  "description": "Core SDK for Costa Rica electronic invoicing (Hacienda API v4.4)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "costa-rica",
    "hacienda",
    "electronic-invoicing",
    "factura-electronica",
    "comprobantes-electronicos"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hacienda-cr/shared": "workspace:*",
    "@xmldom/xmldom": "^0.9.8",
    "fast-xml-parser": "^5.3.7",
    "node-forge": "^1.3.1",
    "smol-toml": "^1.6.0",
    "xadesjs": "^2.4.5",
    "xmldsigjs": "^2.5.5",
    "xpath": "^0.0.34",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node-forge": "^1.3.11"
  },
  "license": "MIT",
  "author": "Dojo Coding Labs <dev@dojocoding.io> (https://dojocoding.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/DojoCodingLabs/hacienda-cr.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/DojoCodingLabs/hacienda-cr#readme"
}
